# =============================================================================
# VOYANT Environment Variables
# =============================================================================
# Copy this file to .env and customize as needed
# All values have sensible defaults for DEV-LOCAL
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
VOYANT_ENV=local
VOYANT_SECRETS_BACKEND=env

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=voyant
POSTGRES_PASSWORD=voyant
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=voyant
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# MinIO (S3-compatible)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=voyant
MINIO_ROOT_PASSWORD=voyant123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# -----------------------------------------------------------------------------
# Kafka
# -----------------------------------------------------------------------------
KAFKA_PORT=9092

# -----------------------------------------------------------------------------
# Keycloak
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_CLIENT_SECRET=voyant-api-secret
KEYCLOAK_PORT=8180

# -----------------------------------------------------------------------------
# DataHub
# -----------------------------------------------------------------------------
DATAHUB_GMS_PORT=8080
DATAHUB_UI_PORT=9002

# -----------------------------------------------------------------------------
# Trino
# -----------------------------------------------------------------------------
TRINO_PORT=8090

# -----------------------------------------------------------------------------
# Spark
# -----------------------------------------------------------------------------
SPARK_UI_PORT=8088

# -----------------------------------------------------------------------------
# Lago Billing
# -----------------------------------------------------------------------------
LAGO_API_PORT=3000
LAGO_API_KEY=lago-api-key-dev
LAGO_SECRET_KEY=lago-secret-key-base-minimum-32-characters
LAGO_ENCRYPTION_KEY=encryption-key-minimum-32-characters

# -----------------------------------------------------------------------------
# Voyant API
# -----------------------------------------------------------------------------
VOYANT_API_PORT=8000
VOYANT_MCP_PORT=8001

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
VOYANT_ENABLE_QUALITY=true
VOYANT_ENABLE_BILLING=true
VOYANT_ENABLE_DATAHUB=true
VOYANT_ENABLE_MFA=false
